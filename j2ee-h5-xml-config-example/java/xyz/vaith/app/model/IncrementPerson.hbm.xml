<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="xyz.vaith.app.model.IncrementPerson" table="hb_crm_increment_person">
        <id name="id" column="ip_id">
            <generator class="increment"></generator>
        </id>
        <property name="name" column="ip_name" />
        <property name="age" column="ip_age" />
    </class>
</hibernate-mapping>