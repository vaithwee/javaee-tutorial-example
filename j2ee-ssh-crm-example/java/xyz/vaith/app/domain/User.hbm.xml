<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="xyz.vaith.app.domain.User" table="sys_user">
        <id name="uid" column="user_id">
            <generator class="native"></generator>
        </id>
        <property name="username" column="user_code" />
        <property name="password" column="user_password" />
        <property name="truename" column="user_name" />
        <property name="state" column="user_state" />
    </class>
</hibernate-mapping>