<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="xyz.vaith.app.model.AutoUpadatePerson" table="hb_crm_au_person">
        <id name="id" column="ap_id">
            <generator class="native" />
        </id>
        <property name="name" column="ap_name" />
        <property name="age" column="ap_age" />
    </class>
</hibernate-mapping>